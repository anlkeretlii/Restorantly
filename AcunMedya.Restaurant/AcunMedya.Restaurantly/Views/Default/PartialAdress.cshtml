
    <div class="info">
        <div class="address">
            <i class="bi bi-geo-alt"></i>
            <h4>Adres:</h4>
            <p>@ViewBag.Location</p>
        </div>

        <div class="open-hours">
            <i class="bi bi-clock"></i>
            <h4>Open Hours:</h4>
            <p>
                Monday-Saturday:<br>
                @ViewBag.OpenHours
            </p>
        </div>

        <div class="email">
            <i class="bi bi-envelope"></i>
            <h4>Email:</h4>
            <p>info@example.com</p>
        </div>

        <div class="phone">
            <i class="bi bi-phone"></i>
            <h4>Call:</h4>
            <p>+1 5589 55488 55s</p>
        </div>

    </div>

